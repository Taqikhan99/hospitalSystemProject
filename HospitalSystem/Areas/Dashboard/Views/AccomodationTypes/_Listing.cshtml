@model HospitalSystem.Areas.Dashboard.ViewModels.AccomodationTypesListingModel

@if (Model != null && Model.AccomodationType != null && Model.AccomodationType.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">NAME</th>
                <th scope="col">ACTIONS</th>

            </tr>
        </thead>
        <tbody>

            @foreach (var accomType in Model.AccomodationType)
            {
                <tr><td>@accomType.Name</td></tr>
                <tr>
                    <td>
                        <button type="button" class="btn btn-primary">Edit</button>
                        <button type="button" class="btn btn-danger">Delete</button>
                    </td>
                </tr>
            }

        </tbody>
    </table>


}
else
{
    <div class="alert alert-warning" role="alert">
        Sorry, No record exists.
    </div>
}

